{
    "name": "C++ Codespace Project",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-vscode.cmake-tools",
        "ms-vscode.cmake-tools"
    ],
    "postCreateCommand": "cmake .. && make",
    "remoteUser": "vscode"
}